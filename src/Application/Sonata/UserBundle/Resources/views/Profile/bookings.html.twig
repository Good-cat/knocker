{% extends 'ApplicationSonataUserBundle:Profile:show.html.twig' %}
    {% block page_title %}Заказаны следующие услуги{% endblock %}
{% block page_subtitle %}{% endblock %}
{% block sonata_profile_content %}



        {% for booking in bookings %}
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Пакет #{{ booking.getId() }}</h3>
                </div>
                <div class="box-body">
                    <table class="table table-striped table-responsive table-bordered">
                        <tbody>
                            <tr>
                                <th>Название</th>
                                <th>Url</th>
                                <th>Действия</th>
                            </tr>
                        </tbody>
                        {% for service in booking.services %}
                            <tr>
                                <td>{{ service.name }}</td>
                                <td>http://new.by/{{ app.getUser().getUserKey() }}/{{ service.slug }}</td>
                                <td style="width: 50px;"><a class="btn btn-danger btn-sm">Удалить</a> </td>
                            </tr>
                        {% endfor %}
                    </table><br/>
                    <a class="btn btn-success" id="button">Выставить счет</a>
                </div>
            </div>



        {% endfor %}


{% endblock %}