{% extends 'ApplicationSonataUserBundle:Profile:show.html.twig' %}
    {% block page_title %}Заказаны следующие услуги{% endblock %}
{% block page_subtitle %}{% endblock %}
{% block sonata_profile_content %}
    {% for booking in bookings %}
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Заказ #{{ booking.getId() }}</h3>
            </div>
            <div class="box-body">
                <table class="table table-striped table-responsive table-bordered">
                    <tbody>
                        <tr>
                            <th>Название</th>
                            <th>Url</th>
                            <th>Действия</th>
                        </tr>
                    </tbody>
                    {% for service in booking.services %}
                        <tr>
                            <td>{{ service.name }}</td>
                            <td>http://new.by/{{ app.getUser().getUserKey() }}/{{ service.slug }}</td>
                            <td style="width: 50px;"><a class="btn btn-danger btn-sm btn-flat" title="Удалить"><i class="fa fa-times"></i></a> </td>
                        </tr>
                    {% endfor %}
                </table><br/>
                <a class="btn btn-success btn-flat" id="add_service">Добавить услугу</a>
                <a class="btn btn-info btn-flat" id="create_invoice">Выставить счет</a>
            </div>
        </div>
    {% endfor %}
    <a class="btn btn-primary btn-flat" id="add_booking" href="{{ path('create_booking') }}">Добавить заказ</a>
{% endblock %}