{#{% extends 'ApplicationSonataUserBundle:Profile:show.html.twig' %}#}
{#{% block page_title %}Доступны следующие услуги{% endblock %}#}
{#{% block page_subtitle %}{% endblock %}#}
{#{% block sonata_profile_content %}#}
<div class="modal fade" id="myModal{{ booking_id }}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Доступные каталоги</h4>
            </div>
            <div class="modal-body">
                <table class="table table-striped table-responsive">
                    {% for service in services %}
                        <tr>
                            <td><div><input type="checkbox" class="knocker" id="{{ service.id }}" booking="{{ booking_id }}" value="{{ service.id }}" name="service[]"></div> </td>
                            <td>{{ service.name }}</td>
                        </tr>
                        <script>
                            var service_id = {{ service.id }};
                            $('input[id=' + service_id + ']').attr('checked',false);;
                        </script>
                    {% endfor %}
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default btn-flat" data-dismiss="modal">Отменить</button>
                <button type="button" class="btn btn-primary btn-flat" id="attach_services" booking="{{ booking_id }}">Добавить</button>
                <script>
                    {{ include('@ApplicationSonataUser/Profile/_attach_services_to_booking.js', { booking_id: booking_id}) }}
                </script>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
